<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/forest"
    >

    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Knight-mares"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@android:color/white"
        android:id="@+id/tvTitle" 
        android:alpha="0.7"
        android:layout_alignParentTop="true"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play Game!"
        android:id="@+id/btnStart"
        android:fontFamily="sans-serif-smallcaps"
        android:backgroundTint="#171747"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvTitle"

        />
        
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="difficultydisplay"
        android:id="@+id/tvDisplayDifficulty"
        android:background="#8C6A03"
        android:textColor="#213501"
        android:padding="10dp"
        android:fontFamily="sans-serif-smallcaps"
        android:alpha="0.65"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_below="@id/btnStart"
                />  
    

    <ImageView
        android:layout_width="281dp"
        android:layout_height="222dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/jackolanternremoved2"
        android:id="@+id/ivPumpkin"
        android:layout_below="@id/tvDisplayDifficulty"
        android:layout_centerHorizontal="true"/>


    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your High Scores"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="#ff8800"
        android:id="@+id/tvHighScore"
        android:layout_below="@id/tvTitle"
        android:visibility="gone"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linLeader"
        android:alpha="0.7"
        android:visibility="gone"
        android:layout_below="@id/tvHighScore"

        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="waiting..."
            android:background="@drawable/edit_round_left"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/tv1"
            
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="waiting..."
            android:background="@drawable/edit_middle"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/tv2"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="waiting..."
            android:background="@drawable/edit_round_right"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/tv3"
            />

    </LinearLayout>

    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="World High Scores"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="#F5E99E"
        android:id="@+id/tvWorldScore"
        android:layout_below="@id/linLeader"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linWorld"
        android:alpha="0.7"
        android:visibility="gone"
        android:layout_below="@id/tvWorldScore"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="waiting..."
            android:background="@drawable/edit_round_left_world"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:id="@+id/tv1w"
            
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="waiting..."
            android:background="@drawable/edit_middle_world"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:id="@+id/tv2w"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="waiting..."
            android:background="@drawable/edit_round_right_world"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:id="@+id/tv3w"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/goblet"
        android:id="@+id/ivGoblet"
        android:baselineAlignBottom="true"
        android:visibility="gone"
        android:layout_below="@id/linWorld"
        android:layout_centerHorizontal="true"
        />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottommenu"
        app:itemIconTint="#fff"
        app:itemTextColor="#fff"
        android:background="#171747"
    />


</RelativeLayout>